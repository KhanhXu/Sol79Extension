{
  "manifest_version": 3,
  "name": "Sol79",
  "version": "1.5.2",
  "description": "Thế giới coin trong tầm tay tay - Khắn Xù",
  "permissions": ["activeTab", "clipboardRead", "scripting", "alarms", "storage", "offscreen"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
   "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["sounds/tele.wav"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
